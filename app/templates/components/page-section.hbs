{{#if section.show}}
  <div class="outer {{section.background}} {{section.heroSize}}{{if section.isHero ' hero-active'}}{{if section.divider ' divided'}}{{if section.backgroundImage ' background-image'}}{{if section.parallax ' parallax'}}" style="{{section.backgroundImage.inlineBackground}}">
    <div class='overlay {{section.overlay}}'>

      {{#if section.divider}}
        {{angled-divider}}
      {{/if}}
      <div class="content-wrapper">
        <div class="container-fluid">
          <div class='row {{section.colHorizontalAlignment}} {{section.colVerticalAlignment}} {{if section.reverse 'flex-sm-row-reverse'}}'>

          {{#each section.column as |column|}}
            <div class='section-column {{column.columnWidthXs}} {{column.columnWidthSm}} {{column.columnWidthMd}} {{column.columnWidthLg}} {{column.columnWidthXl}}'>

            {{#each column.element as |element|}}
              {{#if element.body }}
                <div class='element-text'>
                  <div class='inner'>
                    {{html-safe element.body.value}}
                  </div>
                </div>
              {{else if element.listingType}}
                <div class='element-listing'>
                  <div class='inner'>
                    {{#if (eq element.listingType "articles")}}
                      {{#if articles}}
                        {{#each (sort-by "created:desc" articles) as |article|}}
                          {{article-teaser article=article}}
                        {{/each}}
                      {{else}}
                        No Articles
                      {{/if}}
                    {{else if (eq element.listingType "team")}}
                        Team members
                    {{/if}}
                  </div>
                </div>
              {{else if element.image }}
                <div class='image'>
                  <img src='{{element.image.fullUrl}}' alt='' srcset=''>
                </div>
              {{else if element.slide}}
              <div class='slideshow'>
                <div class='inner'>
                  {{#swiper-container
                    class="item-carousel"
                    loop=false
                    centered=false
                    nextButton='.swiper-next'
                    prevButton='.swiper-prev'
                    slidesPerView=5
                    spaceBetween=80
                    registerAs=itemSwiper
                    breakpoints=breakpoints
                    }}
                    {{#each (shuffle element.slide) as |slide|}}
                      {{#swiper-slide class="d-flex justify-content-center align-items-center text-center"}}
                        <div class="slide-inner">
                          {{#if slide.image}}
                            <div class='image'>
                              <img src='{{slide.image.fullUrl}}' alt='' srcset=''>
                            </div>
                          {{/if}}
                          {{#if slide.body}}
                            <div class='text'>
                              {{html-safe slide.body.value}}
                            </div>
                          {{/if}}
                        </div>
                      {{/swiper-slide}}
                    {{/each}}
                  {{/swiper-container}}
                  <div class="swiper-next">
                    <svg viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 70,90 L 30,50  L 70,10 L 60,0 Z" class="arrow" transform="translate(100, 100) rotate(180) "></path></svg>
                  </div>
                  <div class="swiper-prev">
                    <svg viewBox="0 0 100 100"><path d="M 10,50 L 60,100 L 70,90 L 30,50  L 70,10 L 60,0 Z" class="arrow"></path></svg>
                  </div>
                </div>
              </div>
              {{/if}}
            {{/each}}

            </div>
          {{/each}}

          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}